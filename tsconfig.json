{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "dist",
    "lib": ["ES2020", "DOM", "DOM.Iterable", "WebWorker"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "types": ["node", "vscode", "react", "react-dom"]
  },
  "exclude": ["node_modules", ".vscode-test"],
  "include": ["src/**/*"]
} 